void install(string base)
{
    string target;
    list pathElements;

    g_installing = 1;

#ifdef BINARY
    target = base + BINARY;
    printf("  installing the executable `", target + PROGRAM "'\n");
    logFile("tmp/bin", "binary", target, PROGRAM);
#endif

#ifdef MAN
    target = base + MAN;
    printf("  installing the manual pages below `", target, "'\n");
    
    logZip("tmp/man", PROGRAM".1", target + "/man1");

#endif

#ifdef STD
    target = base + STD;
    printf("  installing README and the changelog at `", target, "\n");
    logZip("", "changelog README", target);

    #ifdef MAN
        printf("  installing the html-manual pages at `", target, "\n");
        logInstall("tmp/manhtml", "", target);
    #endif
#endif

    writeLog();
}




