    // elements of the table are strings, separated by blanks, 
    // the first element is the key.
    // start searching downwards from idx. If idx == -1 then start at the end

int findkey(string key, int idx)
{
    if (idx == -1)
        idx = sizeof(g_logs);

    for (; idx--; )
    {
        if (strfind(g_logs[idx], key) == 0)  // found the element
            return idx;                     // return its index
    }

    return -1;                              // not found
}
